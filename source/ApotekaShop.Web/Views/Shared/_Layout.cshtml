<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    <title>@ViewBag.Title </title>
</head>
<body ng-app="apotekaApp" ng-controller="commonController">

    <nav class="navbar navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Search", "ProductDetails" )">
                    <img src="~/Content/site-images/logo.png" />
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Products", "Search", "ProductDetails")</li>
                    <li role="separator" class="divider"></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@{Html.RenderPartial("_Search");}</li>
                    <li role="separator" class="divider"></li>
                    <li>@{Html.RenderAction("Orders", "Order");}</li>
                    <li role="separator" class="divider"></li>
                    <li>@{Html.RenderAction("Dropdown", "Country");}</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Apoteka.com</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/autocomplete")
    @RenderSection("scripts", required: false)

</body>
</html>
