<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    <title>@ViewBag.Title </title>
</head>
<body>
<div class="navbar navbar-fixed-top">
    <div class="container">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle " data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Search", "ProductDetails")" class="navbar-brand">
                <img src="~/Content/themes/site-images/logo.png" />
            </a>
        </div>

        <div class="navbar-collapse collapse">
            <div class="pull-left">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Products", "Search", "ProductDetails")</li>
                </ul>
            </div>
            <div class="col-md-6 col-sm-6 pull-right">
                @{
                Html.RenderAction("Dropdown", "Country");
                Html.RenderAction("Orders", "Order");
                Html.RenderPartial("_Search");
                }
            </div>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; Apoteka.com</p>
    </footer>
</div>
@Scripts.Render("~/bundles/autocomplete")
@Scripts.Render("~/bundles/order")
@RenderSection("scripts", required: false)
</body>
</html>
