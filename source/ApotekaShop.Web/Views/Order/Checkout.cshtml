@using Newtonsoft.Json
@model ApotekaShop.Services.Models.OrderModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="checkoutController" ng-init="init(@JsonConvert.SerializeObject(Model))">
<div ng-switch="checkoutModel.CurrentStep">

    <ul class="nav nav-wizard">
        <li class="active"><a href="#">Order details</a></li>
        <li><a href="#">Delivery details</a></li>
        <li><a href="#">Messages</a></li>
    </ul>

    <div ng-switch-when="0">
        <h1>Order details</h1>
        <hr/>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-4 control-label">Gift Wrapping</label> <!-- popup required -->
                <div class="col-sm-8">
                    <button type="button" class="btn btn-link">Get the order wrapped up - it's free!</button>
                </div>
            </div>
            <div class="form-group">
                <label for="voucher_code" class="col-sm-4 control-label">Enter voucher code</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="voucher_code" placeholder="code">
                </div>

            </div>

            <div class="form-group hidden">
                <!-- display if codes where applied -->
                <label class="col-sm-4 control-label">Applied gift codes</label>
                <div class="col-sm-8">
                    <p class="form-control-static">#code_1254, #code_t6537</p>
                </div>

            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Discount</label>
                <div class="col-sm-8">
                    <p class="form-control-static">DKK 0.00</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Shipping fee and freight</label>
                <div class="col-sm-8">
                    <p class="form-control-static">
                        Sent by Post Denmark, GLS or SwipBox in discreet package.<br/>
                        Did you achieve free shipping on your order, deducted from the freight when you checkout and select GLS as delivery method.
                    </p>
                </div>
            </div>


            <hr class="col-sm-offset-4"/>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-4 control-label">Total</label>
                <div class="col-sm-8">
                    <p class="form-control-static">
                        DKK 0.00
                    </p>
                </div>
            </div>

            <hr class="col-sm-offset-4"/>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" ng-click="next()" class="btn btn-primary pull-right">Next Step</button>
                </div>
            </div>
        </form>
        <hr/>
    </div>
    <div ng-switch-when="1">
        <h1>Delivery details</h1>
        <hr />
        <form class="form-horizontal">
            <div class="form-group required">
                <label for="inputEmail3" class="col-sm-4 control-label">I Order as</label>
                <div class="col-sm-8">
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" >
                            Private person
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                            Business order
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3" checked>
                            Public institution
                        </label>
                    </div>
                </div>
            </div>

            <hr class="col-sm-offset-4" />

            <div class="form-group required">
                <label for="firstname" class="col-sm-4 control-label">First Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" required id="firstname" placeholder="First Name">
                </div>
            </div>
            <div class="form-group required">
                <label for="surname" class="col-sm-4 control-label">Surname</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" required id="surname" placeholder="Surname">
                </div>
            </div>

            <div class="form-group required">
                <label for="company_name" class="col-sm-4 control-label">Company name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" required id="surname" placeholder="company_name">
                </div>
            </div>
            <div class="form-group required">
                <label for="EAN" class="col-sm-4 control-label">EAN Code</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" required id="surname" placeholder="EAN">
                </div>
                <div class="col-sm-5"><p class="form-control-static">Applies only to public companies</p></div>
            </div>

            <div class="form-group required">
                <label for="address" class="col-sm-4 control-label">Address</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" required id="address" placeholder="Address">
                </div>
            </div>

            <div class="form-group required">
                <label for="postcode" class="col-sm-4 control-label">Post Code &amp; City</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" required id="postcode" placeholder="Post Code">
                </div>
                <div class="col-sm-5">
                    <input type="text" class="form-control" required id="city" placeholder="City">
                </div>
            </div>
            <div class="form-group required">
                <label for="country" class="col-sm-4 control-label">Country</label>
                <div class="col-sm-8">
                    <select class="form-control" required id="country">
                        <option>Denmark</option>
                    </select>
                </div>
            </div>

            <hr class="col-sm-offset-4" />

            <div class="form-group required">
                <label for="email" class="col-sm-4 control-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" required id="Email" placeholder="Email"><br />
                    <p class="form-control-static"><input type="checkbox" id="subscribe_check"> Sign up and get a special offers on our products. You can always unsubscribe.</p>
                </div>
            </div>

            <div class="form-group required">
                <label for="mobile" class="col-sm-4 control-label">Mobile</label>
                <div class="col-sm-8">
                    <input type="tel" class="form-control" required id="mobile" placeholder="Mobile number">
                </div>
            </div>

            <hr class="col-sm-offset-4" />

            <div class="form-group">
                <label for="email" class="col-sm-4 control-label">Got some comments?</label>
                <div class="col-sm-8">
                    <p class="form-control-static"><input type="checkbox" id="subscribe_check" checked> Yes</pclass="form-control-static">
                </div>
            </div>

            <div class="form-group ">
                <label for="order_comment" class="col-sm-4 control-label">Comment to order</label>
                <div class="col-sm-8">
                    <textarea class="form-control" rows="3" id="order_comment" placeholder="Ex. for service questions"></textarea>
                </div>
            </div>

            <div class="form-group ">
                <label for="delivery_comment" class="col-sm-4 control-label">Comment on delivery</label>
                <div class="col-sm-8">
                    <textarea class="form-control" rows="3" id="delivery_comment" placeholder="Ex. how and when we must deliver package."></textarea>
                </div>
            </div>

            <hr class="col-sm-offset-4" />

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <button type="button" ng-click="back()" class="btn btn-default">Back</button>
                </div>

                <div class="col-sm-4">
                    <button type="submit" ng-click="next()" class="btn btn-primary pull-right">Next Step</button>
                </div>
            </div>
        </form>

        <hr />
    </div>
    <div ng-switch-when="2">
        <h1>Empty structure for copying</h1>
        <hr />
        <form class="form-horizontal">
            <div class="form-group">
                <label for="id" class="col-sm-4 control-label">Label</label>
                <div class="col-sm-8">
                    <p class="form-control-static">
                        Contents
                    </p>
                </div>
            </div>

            <hr class="col-sm-offset-4" />

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <button type="button" ng-click="back()" class="btn btn-default">Back</button>
                </div>

                <div class="col-sm-4">
                    <button type="submit" class="btn btn-primary pull-right">Next Step</button>
                </div>
            </div>
        </form>
    </div>
</div>
    <div class="hidden">
        <h1>Log in</h1>
        <hr />
        <form class="form-horizontal ">
            <div class="form-group required">
                <label for="Email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" required id="Email" placeholder="Email">
                </div>
            </div>
            <div class="form-group required">
                <label for="Password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" required id="Password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                    <button type="button" class="btn btn-link">Register</button>
                </div>
            </div>
        </form>
    </div>   
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/checkout")
}


