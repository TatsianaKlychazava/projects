@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ApotekaShop.Web.Helpers
@model ApotekaShop.Services.Models.ProductDetailsDTO

<div class="row">
    <div class="col-md-2 col-md-offset-5 col-sm-2 col-sm-offset-5">
        <img class="img-responsive img-center" src="http://placehold.it/400x400" title="this image needs to be centered">
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-5 col-sm-6 col-sm-offset-5">
        <a href="@Url.Action("Details", new {id = Model.PackageId})">
            <h3>@Model.ProductNames.FirstOrDefault().Name</h3>
        </a>
        <p>Price:@Html.Currency(Model.NormalizedPrice)</p>
        <p>Size @Model.NormalizedPackageSize.ToString("N2")</p>
        <p>
            <a href="#" class="btn btn-primary" role="button">Add to basket</a>
        </p>
        <p>Details</p>
        <p>@Model.DisplayText</p>
    </div>
</div>